<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumnedam.examenm8vicensvico.Vista.MainActivity">

    <TextView
        android:text="Nom alumne:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="64dp"
        android:id="@+id/LBLNom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/TBNom"
        android:layout_alignTop="@+id/LBLNom"
        android:layout_toRightOf="@+id/LBLNom"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_alignBottom="@+id/LBLNom" />

    <TextView
        android:text="Selecciona Tema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LBLNom"
        android:layout_alignLeft="@+id/LBLNom"
        android:layout_alignStart="@+id/LBLNom"
        android:layout_marginTop="48dp"
        android:id="@+id/LBLTema" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/CBTema"
        android:layout_width="300px"
        android:layout_alignTop="@+id/LBLTema"
        android:layout_alignLeft="@+id/TBNom"
        android:layout_alignStart="@+id/TBNom"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="Nombre de preguntes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CBTema"
        android:layout_alignLeft="@+id/LBLTema"
        android:layout_alignStart="@+id/LBLTema"
        android:layout_marginTop="49dp"
        android:id="@+id/LBLNombrePreguntes" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/TBNombrePreguntes"
        android:layout_alignTop="@+id/LBLNombrePreguntes"
        android:layout_alignLeft="@+id/CBTema"
        android:layout_alignStart="@+id/CBTema"
        android:layout_width="80px" />

    <Button
        android:text="Continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TBNombrePreguntes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:id="@+id/BTContinuar" />
</RelativeLayout>
